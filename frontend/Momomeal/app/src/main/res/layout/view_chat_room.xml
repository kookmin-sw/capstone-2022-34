<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_chat_room_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@color/orange_deep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_category_chicken"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/view_chat_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="만나서 반갑습니다."
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_chat_room_img"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/view_chat_room_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="교촌치킨 정릉 1호점 · 5분전"
        android:textColor="@color/gray3"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/view_chat_room_title"
        app:layout_constraintTop_toBottomOf="@+id/view_chat_room_title" />

</androidx.constraintlayout.widget.ConstraintLayout>